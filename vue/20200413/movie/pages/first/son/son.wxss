.topImg{
      height: 350rpx;
      width: 100%;
      position: relative;
}
.topImg .top-img{
      width: 100%;
      height: 100%;
}
.btn{
      position: absolute;
      top: 45%;
      z-index: 99;
      width: 100%;
      background-color: red;
}
.playButton{
      position:absolute ;
      left: 50%;
      margin-left: -40rpx;
      width: 80rpx;
      height: 80rpx;
      z-index: 999;
}
/* 收藏 */
.collection{
      height: 140rpx;
      display: flex;
      align-items: center;
      border-bottom: 1px solid #eee;
      padding: 0rpx 30rpx;
      position: relative;
}
.collection::after{
      position: absolute;
      right: 30rpx;
      top: 49%;
      content: "";
      width: 60%;
      height: 2px ;
      background-color: #333;
}
.collection image{
      width: 80rpx;
      height: 80rpx;
      margin-right: 50rpx;
}
/* ======== */
.word1{
      height:80rpx;
      line-height: 80rpx;
      padding: 0rpx  30rpx;
      display: flex;
      align-items:center ;
}
.word1 image{
      height: 60rpx;
      width: 60rpx;
      border-radius: 50%;
}
.word1 .w1{
      font-size: 12px;
      margin-left: 30rpx;
      color: #aaa;
}
.title{
      line-height: 60rpx;
      color: #333;
      font-weight: bolder;
      font-size: 14px;
      padding: 0rpx 30rpx;
}
.showcontent{
      padding: 0rpx 0rpx 30rpx;
      border-bottom: 1px solid #eee;
}
.showpicu{
      height: 300rpx;
}
.txt{
      font-size: 12px;
      color: #777;
      padding:15rpx 30rpx ;
      letter-spacing: 4rpx;
      display: block;
}
.talk{
      display: flex;
      align-items: center;
      font-size: 12px;
      padding: 0rpx 30rpx;
}
.talk text{
      margin-left: 10rpx;
}
.talk image{
      width: 30rpx;
      height: 30rpx;
}