@import "all-son/all-son.wxss";
/* pages/move/move.wxss */
.searchTop{
      width: 100%;
      height: 100rpx;
      display: flex;
      justify-content: space-between;
      padding: 0rpx 20rpx;
      box-sizing: border-box;
      padding-top: 10rpx;
      background-color: #eee;
}
.searchTop image{
      margin-top: 10rpx;
      width: 60rpx;
      height: 60rpx;
}
.searchTop input{
      width: 100%;
      height: 80rpx;
      line-height: 80rpx;
      padding: 0rpx 20rpx;
      font-size: 14px;
      color: #000;
}

/* 电影分类区 */
.moviesClass{
      padding: 30rpx 30rpx;
}
.moviesTitle{
      margin-bottom: 30rpx;
}
.movieWord{
      height: 50rpx;
      line-height: 50rpx;
      display: flex;
      justify-content: space-between;
      font-size: 12px;
}
.movieWord text:last-child{
      color: #1296db;
}
