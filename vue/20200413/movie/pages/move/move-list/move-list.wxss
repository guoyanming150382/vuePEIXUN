}
.allstart{
      height: 25rpx;
      width: 200rpx;
      display: flex;
      justify-content: space-around;
      font-size: 12px;
      margin-top: 15rpx;
      margin-bottom: 20rpx;
}
.pingfen{
      font-size: 12px;
      line-height: 10rpx;
      margin-left: 20rpx;
      color: #1296db;
}